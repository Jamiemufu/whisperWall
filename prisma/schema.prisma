generator client {
  provider = "prisma-client"
  output   = "./generated/client"
}

datasource db {
  provider = "postgresql"
}

model Whisper {
  id        Int      @id @default(autoincrement())
  category  Category
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  likes     Int      @default(0)
  loves     Int      @default(0)
  supports  Int      @default(0)
}

enum Category {
  stress
  relationship
  work
  family
  motivation
  purpose
  life
  finance
  health
  other
}

enum ResponseCategory {
  advice
  empathy
  encouragement
  humor
  perspective
  validation
  support
  resources
  motivation
  other
}